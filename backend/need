-- Обновление для Rexay Comfort 70
UPDATE window_models
SET
    image_large = './static/images/windows/rexay_comfort_70_large.jpg',
    image_medium = './static/images/windows/rexay_comfort_70_medium.jpg',
    image_small = './static/images/windows/rexay_comfort_70_small.png',
    updated_at = CURRENT_TIMESTAMP
WHERE id = '06e9d411-5cd2-4b79-aaec-b7184e8a993d';

